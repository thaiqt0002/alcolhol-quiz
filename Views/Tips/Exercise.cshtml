@{
    var Part1 = new Dotnet.Models.TipsCardViewModel
    {
        Class = "",
        Text = @"
        <p class='text-xl'>Sau một thời gian dài sử dụng rượu bia, cơ thể cần thời gian để hồi phục và cải thiện sức khỏe. Chế độ tập luyện hợp lý có thể giúp tăng cường chức năng của gan, tim mạch, hệ tiêu hóa và sức khỏe tinh thần. Dưới đây là khuyến nghị về chế độ tập luyện để giúp cơ thể phục hồi hiệu quả:</p>"
    };
    var Part2 = new Dotnet.Models.TipsCardViewModel
    {
        Class = "bg-[#F5F7FB]",
        OverviewTitle = "1. Tập luyện tim mạch (Cardio)",
        Text = @"
        <p class='text-xl'>Tập luyện tim mạch giúp cải thiện lưu thông máu, hỗ trợ gan và thận trong việc loại bỏ độc tố khỏi cơ thể, đồng thời tăng cường sức khỏe tim mạch sau khi sử dụng rượu bia.</p>
        <b class='text-xl'>Khuyến nghị:</b>
        <p class='text-xl'> +   <b>Đi bộ nhanh hoặc chạy bộ nhẹ:</b> Bắt đầu với các bài tập nhẹ nhàng như đi bộ nhanh hoặc chạy bộ nhẹ trong 20-30 phút mỗi ngày. Điều này giúp cải thiện sức bền và hỗ trợ quá trình đốt cháy calo dư thừa.</p>
        <p class='text-xl'> +   <b>Đạp xe hoặc bơi lội:</b> Đây là các bài tập tuyệt vời giúp rèn luyện tim mạch mà ít gây áp lực lên các khớp xương, đặc biệt là khi cơ thể chưa quen với cường độ tập luyện cao.</p>"
    };
    var Part3 = new Dotnet.Models.TipsCardViewModel
    {
        Class = "",
        OverviewTitle = "2. Tập thể dục cường độ thấp đến trung bình (LISS)",
        Text = @"
        <p class='text-xl'>Các bài tập thể dục cường độ thấp nhưng kéo dài giúp cơ thể dần dần tăng cường sức bền mà không gây căng thẳng lớn lên hệ cơ và khớp.</p>
        <b class='text-xl'>Khuyến nghị:</b>
        <p class='text-xl'> +   <b>Yoga hoặc Pilates:</b> Giúp tăng cường sự linh hoạt, cải thiện hô hấp, và giảm căng thẳng. Đồng thời, các bài tập yoga giúp giảm cảm giác lo lắng và căng thẳng liên quan đến việc cắt giảm rượu bia.</p>
        <p class='text-xl'> +   <b>Đi bộ dài: </b>Đi bộ kéo dài trong công viên hoặc địa hình tự nhiên vừa giúp thư giãn tinh thần vừa cải thiện tuần hoàn máu.</p>
        <p class='text-xl'><b>Tần suất: </b>2-3 buổi/tuần, mỗi buổi khoảng 30-60 phút.</p>"
    };
    var Part4 = new Dotnet.Models.TipsCardViewModel
    {
        Class = "bg-[#F5F7FB]",
        OverviewTitle = "3. Tập luyện sức mạnh (Strength Training)",
        Text = @"
        <p class='text-xl'>Việc sử dụng rượu bia kéo dài có thể dẫn đến suy yếu cơ bắp. Tập luyện sức mạnh giúp cải thiện khối lượng cơ, tăng cường trao đổi chất và hỗ trợ quá trình hồi phục tổng thể của cơ thể.</p>
        <b class='text-xl'>Khuyến nghị:</b>
        <p class='text-xl'> +   <b>Bài tập với trọng lượng cơ thể:</b> Dần dần tăng cường độ với các bài tập nâng tạ nhẹ hoặc dùng dây kháng lực để tập các nhóm cơ khác nhau như vai, lưng và chân.</p>
        <p class='text-xl'> +   <b>Tập tạ nhẹ hoặc sử dụng dây kháng lực (resistance bands):</b> Dần dần tăng cường độ với các bài tập nâng tạ nhẹ hoặc dùng dây kháng lực để tập các nhóm cơ khác nhau như vai, lưng và chân.</p>
        <p class='text-xl'><b>Tần suất: </b> 2-3 buổi/tuần, mỗi buổi khoảng 20-40 phút. Tập trung vào từng nhóm cơ mỗi lần để tránh mệt mỏi và chấn thương.</p>"
    };
    var Part5 = new Dotnet.Models.TipsCardViewModel
    {
        Class = "",
        OverviewTitle = "4. Bài tập thở và kiểm soát hơi thở",
        Text = @"
        <p class='text-xl'>Rượu bia thường gây ảnh hưởng đến hệ hô hấp, đặc biệt khi uống quá nhiều. Các bài tập thở giúp phục hồi khả năng hô hấp và cải thiện lượng oxy cung cấp cho các tế bào.</p>
        <b class='text-xl'>Khuyến nghị:</b>
        <p class='text-xl'> +   <b>Bài tập thở sâu:</b> Thực hành thở bụng (diaphragmatic breathing) bằng cách hít sâu qua mũi, giữ hơi thở trong vài giây, sau đó thở ra từ từ qua miệng. Điều này giúp cải thiện oxy trong máu và giảm căng thẳng.</p>
        <p class='text-xl'> +   <b>Thiền và chánh niệm (Mindfulness):</b>  Kết hợp thiền với các bài tập thở để cải thiện sự tập trung, giúp bạn vượt qua cảm giác thèm rượu và tăng cường sự thư giãn.</p>
        <p class='text-xl'><b>Tần suất: </b> 5-10 phút mỗi ngày, có thể thực hiện buổi sáng hoặc trước khi đi ngủ.</p>"
    };
    var Part6 = new Dotnet.Models.TipsCardViewModel
    {
        Class = "bg-[#F5F7FB]",
        OverviewTitle = "5. Bài tập tăng cường sự dẻo dai và phục hồi (Flexibility & Recovery)",
        Text = @"
        <p class='text-xl'>Rượu bia có thể làm tăng tình trạng viêm trong cơ thể, gây mệt mỏi và cứng cơ. Các bài tập kéo giãn và phục hồi giúp cơ thể dẻo dai hơn và giảm thiểu tình trạng viêm.</p>
        <b class='text-xl'>Khuyến nghị:</b>
        <p class='text-xl'> +   <b>Kéo dãn toàn thân:</b> Mỗi buổi tập luyện nên kết thúc bằng các bài tập kéo giãn cơ để giảm căng cơ, đặc biệt là các nhóm cơ chính như đùi, lưng dưới, vai và cổ.</p>
        <p class='text-xl'> +   <b>Massage hoặc foam rolling:</b> Sử dụng con lăn (foam roller) để massage cơ và giúp tăng tuần hoàn máu, giảm viêm và thúc đẩy quá trình phục hồi cơ bắp.</p>
        <p class='text-xl'><b>Tần suất: </b> Sau mỗi buổi tập, dành ít nhất 10-15 phút để thực hiện các bài tập kéo giãn hoặc sử dụng con lăn.</p>"
    };
    var Part7 = new Dotnet.Models.TipsCardViewModel
    {
        Class = "",
        OverviewTitle = "6. Hoạt động ngoài trời",
        Text = @"
        <b class='text-xl'>Hoạt động ngoài trời giúp tăng cường sức khỏe tinh thần, đặc biệt khi bạn đang cắt giảm rượu bia. Ánh nắng mặt trời cung cấp vitamin D, giúp cải thiện tâm trạng và sức khỏe xương.</b>
        <b class='text-xl'>Khuyến nghị:</b>
        <p class='text-xl'> +   <b>Đi bộ hoặc chạy bộ trong công viên:</b> Tận hưởng thiên nhiên giúp giảm căng thẳng và cải thiện tinh thần.</p>
        <p class='text-xl'> +   <b>Chơi thể thao nhẹ nhàng:</b> Các môn thể thao như tennis, cầu lông, hoặc đạp xe ngoài trời không chỉ tốt cho sức khỏe tim mạch mà còn giúp bạn cảm thấy phấn chấn và có động lực hơn trong việc duy trì lối sống lành mạnh.</p>
        <p class='text-xl'><b>Tần suất: </b> 2-3 lần/tuần, mỗi buổi khoảng 30-60 phút.</p>"
    };
    var Part8 = new Dotnet.Models.TipsCardViewModel
    {
        Class = "bg-[#F5F7FB]",
        OverviewTitle = "7. Tăng cường giấc ngủ và nghỉ ngơi",
        Text = @"
        <p class='text-xl'>Việc tập luyện cần kết hợp với giấc ngủ đủ và chất lượng. Rượu bia thường làm gián đoạn giấc ngủ sâu, vì vậy khi cắt giảm rượu bia, hãy cố gắng điều chỉnh thời gian ngủ để cơ thể có thời gian phục hồi.</p>
        <b class='text-xl'>Khuyến nghị:</b>
        <p class='text-xl'> +   <b>Ngủ đủ 7-8 tiếng mỗi đêm:</b>  Tập luyện sẽ không hiệu quả nếu không có giấc ngủ đầy đủ.</p>
        <p class='text-xl'> +   <b>Tránh màn hình điện tử trước khi ngủ:</b> Tạo điều kiện cho cơ thể thư giãn và dễ dàng đi vào giấc ngủ sâu hơn.</p>
        <b class='text-xl'>Lưu ý khi tập luyện sau khi cắt giảm rượu bia:</b>
        <p class='text-xl'> +   <b>Bắt đầu từ từ:</b> Nếu bạn đã không tập luyện trong một thời gian dài, hãy bắt đầu với cường độ thấp và tăng dần cường độ để tránh căng thẳng và chấn thương.</p>
        <p class='text-xl'> +   <b>Uống đủ nước: </b> Việc giữ cơ thể đủ nước là rất quan trọng, đặc biệt khi tập luyện, vì rượu có thể gây mất nước.</p>
        <b class='text-xl'>Kết hợp một chế độ tập luyện cân đối với một chế độ ăn uống lành mạnh sẽ giúp cải thiện sức khỏe toàn diện sau một giai đoạn dài sử dụng rượu bia.</b>"
    };

}

