@{
    var ButtontipsList = new List<Dotnet.Models.QuizButtonViewModel>
    {
        new Dotnet.Models.QuizButtonViewModel { Text = "Chế độ ăn uống", Class = "xl:w-5/12 w-full", OnClick = $"window.location.href='{Url.Action("Diet", "Tips")}'" },
        new Dotnet.Models.QuizButtonViewModel { Text = "Chế độ rèn luyện", Class = "xl:w-5/12 w-full", OnClick = $"window.location.href='{Url.Action("Exercise", "Tips")}'" },
        new Dotnet.Models.QuizButtonViewModel { Text = "Một số loại thảo dược", Class = "xl:w-5/12 w-full", OnClick = $"window.location.href='{Url.Action("Medicine", "Tips")}'" },
        new Dotnet.Models.QuizButtonViewModel { Text = "Các triệu chứng về sức khỏe", Class = "xl:w-5/12 w-full", OnClick = $"window.location.href='{Url.Action("Symptom", "Tips")}'" },
    };
}

<div class="flex flex-col gap-8 p-8">
    <h2 class="text-[#1D3D6E] text-3xl font-bold text-center">Một số lời khuyên</h2>
    <div class="flex flex-col w-full items-center justify-center gap-8">
        @foreach (var item in ButtontipsList)
        {
            @await Html.PartialAsync("Quiz/Components/QuizButton", item)
        }

    </div>
</div>
